{
  "name": "dailyvaibe-backend",
  "version": "3.0.0",
  "description": "Daily Vaibe News Platform Backend API with Cloudflare R2 Integration, Advanced Monitoring & Real-time Features",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:watch": "cross-env NODE_ENV=development nodemon --inspect server.js",
    "dev:debug": "cross-env NODE_ENV=development DEBUG=dailyvaibe:* nodemon server.js",
    "start": "node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "start:staging": "cross-env NODE_ENV=staging node server.js",
    "test": "node scripts/testDb.js",
    "test:env": "node scripts/testEnv.js",
    "test:cloudflare": "node scripts/testCloudflare.js",
    "test:routes": "node scripts/testRoutes.js",
    "db:install": "node config/dbinstall.js",
    "db:update-sessions": "node config/updatesessions.js",
    "db:seed-admin": "node config/seedAdmin.js",
    "db:see-schema": "node config/seeschema.js",
    "db:migrate": "node config/migrate.js",
    "db:backup": "node scripts/backupDb.js",
    "fix:sessions": "node scripts/fixSessions.js",
    "fix:sessions:prod": "cross-env NODE_ENV=production node scripts/fixSessions.js",
    "import:db": "node importDatabase.js",
    "export:render": "node exporttorender.js",
    "clean": "rimraf node_modules package-lock.json && npm install",
    "health": "node scripts/healthCheck.js",
    "validate": "node scripts/validateEnv.js || echo 'Validation skipped'",
    "setup-tables": "node scripts/vaibaMissingTables.js",
    "build": "echo 'Build complete - Daily Vaibe Backend ready for deployment'",
    "postinstall": "echo 'Installation complete - Daily Vaibe Backend ready'",
    "predeploy": "node scripts/validateEnv.js || true",
    "deploy:production": "cross-env NODE_ENV=production node server.js",
    "database:optimize": "node scripts/manual-database-optimization.js --yes",
    "database:stats": "node scripts/check-stats.js",
    "database:health": "node scripts/database-health-monitor.js",
    "db:schedule": "node scripts/schedule-maintenance.js",
    "cron:daily:full-maintenance": "node scripts/daily-maintenance.js",
    "cron:hourly:auto-optimize": "node scripts/auto-optimizer.js --quiet",
    "cron:frequent:refresh-sync": "node scripts/frequent-refresh-sync.js",
    "database:maintenance": "npm run cron:daily:full-maintenance",
    "database:auto": "npm run cron:hourly:auto-optimize",
    "logs:view": "tail -f logs/access.log",
    "logs:errors": "tail -f logs/error.log",
    "cloudflare:test": "node scripts/testCloudflare.js",
    "cloudflare:upload-test": "node scripts/testCloudflareUpload.js"
  },
  "keywords": [
    "news-platform",
    "cms",
    "api",
    "admin-panel",
    "authentication",
    "session-management",
    "cloudflare-r2",
    "postgresql",
    "real-time",
    "socket-io",
    "express",
    "rest-api"
  ],
  "author": "Daily Vaibe Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dailyvaibe/backend.git"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pg": "^8.17.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.3",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.7",
    "rimraf": "^6.1.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^5.0.10"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "app.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "config/**/*.js",
      "utils/**/*.js",
      "services/**/*.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/**",
      "logs/**",
      "uploads/**",
      "*.log",
      ".git",
      "dist/**",
      "test/**"
    ],
    "delay": 1500,
    "env": {
      "NODE_ENV": "development"
    },
    "exec": "node"
  }
}